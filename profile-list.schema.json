{
  "$id": "https://github.com/lens-protocol/profile-lists/profile-list.schema.json",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "description": "Specification for Creating Lists of Lens Protocol Profiles",
  "type": "object",
  "properties": {
    "title" : {
      "type:": "string"
    },
    "author" : {
      "type:": "string"
    },
    "listType" : {
      "type:": "string",
      "enum" : ["verified", "human", "bot", "spam", "squatter", "stolen", "admin", "moderator"]
    },
    "profiles": {
      "type": "array",
      "items": {
        "$ref": "#/$defs/profileID"
      }
    }
  },
  "$defs": {
    "profileID" : {
      "type": "string",
      "pattern": "^0x([a-fA-F0-9]{2,})$"
    }
  }
}
